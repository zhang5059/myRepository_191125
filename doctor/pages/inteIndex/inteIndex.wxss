.box_top {
    width: 100%;
    height: 100rpx;
    /* border-bottom: 2rpx solid #ccc; */
    padding: 20rpx;
    display: flex;
    justify-content: flex-end;
    box-sizing: border-box;
    font-weight: bold;
}


.jifenIcon {
    width: 100%;
    height: 250rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    /* border-bottom: 2rpx solid #ccc; */
}
.jifenIcon>image {
    width: 130rpx;
    height: 130rpx;
}

.jifenTitle {
    width: 100%;
    height: 150rpx;
    /* border-bottom: 2rpx solid #ccc; */
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
}


.jifenNum {
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 60rpx;
    font-weight: bold;
}

.bottomBtn {
    width: 100%;
    height: 600rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.bottomBtn>view {
    width: 500rpx;
    height: 100rpx;
    background: #07C160;
    border-radius: 10rpx;
    color: #fff;
    text-align: center;
    font-weight: bold;
    line-height: 100rpx;
    font-size: 36rpx;
}



.tankuang {
    width: 80%;
    height: 300rpx;
    background: #fff;
    position: fixed;
    top: 400rpx;
    left: 90rpx;
    /* opacity: 0.9; */
    /* border: 2rpx solid #ccc; */
    padding: 20rpx;
    box-sizing: border-box;
    border-radius: 5rpx;
}
.tankuang>input {
    margin-top: 50rpx;
    margin-bottom: 56rpx;
}
.buttTwo {
    display: flex;
}
.butLeft {
    width: 50%;
    height: 80rpx;
    background:#FAFAFA;
    color: #9C9C9C;
    line-height: 80rpx;
    text-align: center;
}
.butRight {
    width: 50%;
    height: 80rpx;
    background: #07C160;
    color: #fff;
    line-height: 80rpx;
    text-align: center;
}



