.box {
    width: 100%;
    height: 100%;
    background: #EDEDED;
    position: absolute;
    padding: 5rpx;
    box-sizing: border-box;
}
.boxContent {
    width: 95%;
    height: 400rpx;
    margin-top: 20rpx;
    margin: 0 auto;
    background: #fff;
    border-radius: 10rpx;
    padding: 20rpx;
    box-sizing: border-box;
}
.boxContent>input {
    margin-bottom: 20rpx;
    margin-top: 40rpx;
    font-size: 50rpx;
    /* padding: 10rpx;
    box-sizing: border-box;
    height: 50rpx; */
}

.bottomBut {
    width: 100%;
    height: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.bottomBut>view {
    width: 550rpx;
    height: 90rpx;
    border-radius: 10rpx;
    background: #07C160;
    text-align: center;
    line-height: 90rpx;
}
