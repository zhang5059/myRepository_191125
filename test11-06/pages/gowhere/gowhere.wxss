.sousuoResult {
    margin-top: 90rpx;
}
.resultBox {
    display: flex;
    padding: 25rpx 0;
    padding-left: 40rpx;
    align-items: center;
    border-bottom: 2rpx solid #f4f4f4;
    box-sizing: border-box;
}

.resultContent view {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}
