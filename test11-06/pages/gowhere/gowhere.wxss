.map_container {
    position: relative;
}

.searchBox {
    position: fixed;
    background: #fff;
    top: 0;
    z-index: 100;
}

.sousuo {
    width: 100vh;
    height: 90rpx;
    background: #fff;
    border-bottom: 1rpx solid #eee;
    display: flex;
    align-items: center;
}

.sousuoInner {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
}

.sousuoLeft {
    width: 10%;
    margin-left: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.sousuoRight {
    display: flex;
    justify-content: space-between;
    width: 40%;
}

