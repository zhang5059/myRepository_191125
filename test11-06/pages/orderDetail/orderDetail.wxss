}



.bottomBtn {
    width: 95%;
    height: 100rpx;
    box-shadow: 0 5rpx 5rpx 5rpx #eee;
    position: fixed;
    bottom: 20rpx;
    display: flex;
    justify-content: center;
    border-radius: 20rpx;
    align-items: center;
    font-size: 24rpx;
}

.bottomBtn image {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 5rpx;
}

.middle {
    width: 100%;
    height: 80%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.middle>view {
    height: 90%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #7f7f7f;
}

.btnLeft {
    border-right: 2rpx solid #eee;
}
